<div class="container-bookings">
  <h1>Mes réservations</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Portfolio</th>
        <th>Début</th>
        <th>Fin</th>
        <th>Statut</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td><%= link_to booking.portfolio.title, portfolio_path(booking.portfolio) %></td>
          <td><%= booking.start_date %></td>
          <td><%= booking.end_date %></td>
          <td><%= booking.status.present? ? booking.status.capitalize : "Non défini" %></td>
          <td>
            <%= link_to "Voir", portfolio_booking_path(booking.portfolio, booking), class: "btn btn-info btn-sm" %>
            <% if booking.accepted? %>
              <%= link_to "Refuser", portfolio_booking_path(booking.portfolio, booking), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Refuser et supprimer cette demande ?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  .container-bookings {
    max-height: 80vh; /* Ajuste la hauteur maximale selon tes besoins */
    overflow-y: auto; /* Active le défilement vertical à l'intérieur du conteneur */
  }
</style>
