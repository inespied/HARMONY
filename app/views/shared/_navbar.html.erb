<div class="navbar navbar-expand-sm navbar-light navbar-lewagon bg-black" style="height: 60px;">
  <div class="container-fluid h-100">
    <!-- Logo -->
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center h-100" do %>
      <%= image_tag 'Harmony_full_logo.png', style: 'height:30px; width:auto;' %>
    <% end %>

    <!-- Bouton Toggler -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false"
            aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Menu principal -->
    <div class="collapse navbar-collapse h-100" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto h-100 d-flex align-items-center">
        <% if user_signed_in? %>
          <!-- Si l'utilisateur est connecté -->
          <li class="nav-item me-3">
            <!-- Bouton "Créer une playlist" plus petit -->
            <button type="button"
                    data-bs-toggle="modal"
                    data-bs-target="#newPlaylistModal"
                    style="
                      display: inline-block;
                      margin: 0.3rem 0;         /* marge vertical réduite */
                      border: 2px solid #fff;
                      background: #fff;
                      color: #000;
                      padding: 0.3rem 0.8rem;    /* padding plus petit */
                      font-size: 0.85rem;        /* police réduite */
                      font-weight: 500;
                      cursor: pointer;
                      transition: transform 0.2s ease-in-out;
                      border-radius: 75px;
                      text-decoration: none;
                    "
                    onmouseover="this.style.transform='scale(1.05)';"
                    onmouseout="this.style.transform='scale(1)';">
              Créer une playlist
            </button>
          </li>

          <li class="nav-item dropdown d-flex align-items-center">
            <!-- Espace entre le bouton et la photo via margin-left -->
            <a href="#" class="avatar ms-2" id="navbarDropdown" data-bs-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">
              <%= cl_image_tag current_user.photo.key, class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end bg-black"
                 aria-labelledby="navbarDropdown">
              <%= link_to "Ton Tableau de Bord", dashboard_path, class: "dropdown-item text-white" %>
              <%= link_to "Log out", destroy_user_session_path,
                          data: { turbo_method: :delete },
                          class: "dropdown-item text-white" %>

            </div>
          </li>
        <% else %>
          <!-- Si l'utilisateur N’EST PAS connecté -->
          <li class="nav-item d-flex align-items-center me-3">
            <!-- Lien "S'inscrire" (texte gris, devient blanc au survol) -->
            <%= link_to "S'inscrire", new_user_registration_path,
                        style: "
                          color: #ccc;
                          font-size: 0.85rem;
                          margin: 0.3rem 0;
                          text-decoration: none;
                        ",
                        onmouseover: "this.style.color='#fff';",
                        onmouseout: "this.style.color='#ccc';" %>
          </li>
          <li class="nav-item d-flex align-items-center">
            <!-- Bouton "Se connecter" plus petit -->
            <%= link_to new_user_session_path,
                        style: "
                          display: inline-block;
                          margin: 0.3rem 0;
                          border: 2px solid #fff;
                          background: #fff;
                          color: #000;
                          padding: 0.3rem 0.8rem;
                          font-size: 0.85rem;
                          font-weight: 500;
                          cursor: pointer;
                          transition: transform 0.2s ease-in-out;
                          border-radius: 75px;
                          text-decoration: none;
                        ",
                        onmouseover: "this.style.transform='scale(1.05)';",
                        onmouseout: "this.style.transform='scale(1)';" do %>
              Se connecter
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
